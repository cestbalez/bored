      </div>
      <div class="col-xs-4 money">
        <%= image_tag("money.png", :alt => "money") %>
        <h2>Make money</h2>
      </div>
      <div class="col-xs-4 friends">
        <%= image_tag("friends.png", :alt => "friends") %>
        <h2>Make new friends</h2>
      </div>
    </div>
  </div>
</div>
