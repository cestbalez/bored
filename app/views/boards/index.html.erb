<div class="wrapper">

  <div class="flex-container all">
    <div class="flex-container boards">

        <div class="search-bar">
          <%= form_tag boards_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a Board"
          %>
          <% end %>
        </div>
        <div class= "row">
          <% @boards.each do |board| %>
          <div class= "col-xs-12 col-md-6 col-lg-4 card-wrapper">
            <%= link_to board_path(board) do %>
            <div class= "card" style="background-image: url(<%= cl_image_path board.photo %>)">
              <div class="board-details">
                <div class= "card-title"><%= board.title %></div>
                <div class= "card-avatar" style="background-image: url(<%= cl_image_path board.user.photo %>)">
                </div>
                <div class= "card-price"><%= board.price %>/day</div>
              </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
    </div>

    <div id="map" data-markers="<%= @markers.to_json %>">Map</div>
  </div>

</div>
